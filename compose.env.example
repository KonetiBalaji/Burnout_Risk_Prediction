# Database credentials
POSTGRES_DB=burnout
POSTGRES_USER=burnout
POSTGRES_PASSWORD=burnout

# Prisma connection URL used by the Nest backend
DATABASE_URL=postgresql://burnout:burnout@postgres:5432/burnout

# JWT secrets
JWT_ACCESS_SECRET=super-secret-access-key
JWT_REFRESH_SECRET=super-secret-refresh-key
JWT_ACCESS_EXPIRES=900
JWT_REFRESH_EXPIRES=604800

# NextAuth secret (must be a strong random string in production)
NEXTAUTH_SECRET=replace-with-strong-secret
