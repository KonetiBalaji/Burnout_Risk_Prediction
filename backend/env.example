# Environment variables for Burnout Risk Prediction Backend
# Created by Balaji Koneti
# 
# IMPORTANT: Copy this file to .env and update the values
# NEVER commit the actual .env file to version control

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/burnout-risk-prediction
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_KEY
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_CHARACTER_ENCRYPTION_KEY

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# ML Model Configuration
MODEL_VERSION=1.0.0
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_CACHE_TTL=3600

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8001
ML_API_TIMEOUT=10000
ML_RETRY_ATTEMPTS=3
ML_RETRY_DELAY=1000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Burnout Risk Prediction System

# External API Configuration
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/auth/google/callback

GMAIL_API_KEY=your-gmail-api-key
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/auth/gmail/callback

OUTLOOK_API_KEY=your-outlook-api-key
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3000/auth/outlook/callback

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx
UPLOAD_PATH=uploads/

# Monitoring and Alerting
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
ALERT_EMAIL=admin@yourdomain.com

# Production Security
TRUSTED_PROXIES=127.0.0.1,::1
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
HTTPS_REDIRECT=false
SECURE_COOKIES=false

# API Keys and Secrets (for external services)
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id
