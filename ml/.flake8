# Flake8 configuration for ML service - Created by Balaji Koneti
[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .coverage,
    htmlcov,
    .tox,
    .mypy_cache,
    .DS_Store,
    node_modules
per-file-ignores =
    __init__.py:F401
max-complexity = 10
select = C,E,F,W,B,B950
